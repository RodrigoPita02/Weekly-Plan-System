<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plano de Atividades</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Plano Semanal de Atividades</h1>

    <!-- Formulário para Adicionar Atividade -->
    <form action="/add-plano" method="POST">
        <label for="dia">Dia da Semana:</label>
        <select name="dia" id="dia">
            <option value="Segunda">Segunda</option>
            <option value="Terça">Terça</option>
            <option value="Quarta">Quarta</option>
            <option value="Quinta">Quinta</option>
            <option value="Sexta">Sexta</option>
        </select>

        <label for="inicio">Hora de Início:</label>
        <input type="time" name="inicio" id="inicio">

        <label for="fim">Hora de Fim:</label>
        <input type="time" name="fim" id="fim">

        <label for="tipo_atividade">Tipo de Atividade:</label>
        <select name="tipo_atividade" id="tipo_atividade">
            <% atividades.forEach(atividade => { %>
                <option value="<%= atividade.id %>"><%= atividade.descricao %></option>
            <% }); %>
        </select>

        <label for="valencia">Valência:</label>
        <select name="valencia" id="valencia">
            <% valencias.forEach(valencia => { %>
                <option value="<%= valencia.id %>"><%= valencia.descricao %></option>
            <% }); %>
        </select>

        <button type="submit">Adicionar Plano</button>
    </form>

    <!-- Calendário -->
    <div id="calendario">
        <!-- Calendário será gerado via JavaScript -->
    </div>

    <script src="/script.js"></script>
</body>
</html>
